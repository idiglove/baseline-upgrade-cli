{
  "name": "baseline-upgrade",
  "version": "1.0.0",
  "description": "CLI tool that scans codebases and suggests modern web feature upgrades using Baseline data",
  "main": "dist/cli.js",
  "bin": {
    "baseline-upgrade": "./bin/baseline-upgrade"
  },
  "scripts": {
    "build": "tsc",
    "build:fast": "esbuild src/cli.ts --bundle --platform=node --target=node18 --outdir=dist --external:commander",
    "dev": "ts-node src/cli.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:tests": "eslint tests/**/*.js --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "analyze:file": "node dist/cli.js file",
    "analyze:commit": "node dist/cli.js commit"
  },
  "keywords": [
    "cli",
    "modernization",
    "baseline",
    "web-standards",
    "javascript",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "files": [
    "dist/",
    "bin/"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "web-features": "^2.47.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@eslint/eslintrc": "^3.3.1",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
